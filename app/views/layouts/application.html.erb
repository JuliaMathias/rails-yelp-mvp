<!DOCTYPE html>
<html>
  <head>
    <title>RailsYelpMvp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <nav class="navbar navbar-light bg-light">
      <%= link_to 'Restaurants', restaurants_path, class: "navbar-brand text-danger display-4 font-weight-bold" %>
      <%= link_to 'Add a new Restaurant', new_restaurant_path, class: "btn btn-outline-danger my-2 my-lg-0" %>
    </nav>
    <div class="container mt-5">
      <%= yield %>
    </div>
  </body>
</html>
